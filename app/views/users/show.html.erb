<% provide(:title, @user.name) %> 
<div class="row-fluid">
 	<div class="span4">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %> 
			<% if @user == current_user %>
				(you)
			<% end %>
		</h1>
  	</div>
	<div class="span8">
		<h2>Items: </h2>
		<% if @user.items.empty? %>
			User has posted no items
		<% else %>
			<table class="table table-striped table-bordered">
				<tr>
					<th>Name </th>
					<th>status </th>
				</tr>
				<% @user.items.each do |x| %>
					<tr> 
						<td> <%= link_to x.name, x %></td>
						<td> <%= x.status %></td>
					</tr>
				<% end %>
			</table>
		<% end %> 
	</div>
</div>